@model IEnumerable<Buycars.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="padding-top:50px;">Your Order History</h2>




<table style="margin-top:50px;" class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Image</td>
            <td>Order Price</td>
            <td>Order Date</td>
        </tr>
    </thead>
    <tbody  style="margin-top:100px;">
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @{
                    var base64 = Convert.ToBase64String(item.Image);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    <img src='@imgsrc' style="width:350px; height:200px;margin-bottom:20px;" />
                }
            </td>
            <td>@item.OrderPrice.00$</td>
            <td>@item.DateAdded</td>
        </tr>
        }
    </tbody>
</table>